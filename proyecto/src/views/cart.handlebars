<div class="navbar-container">
  <h1 class="title">Carrito</h1>
  <div class="navbar">
    <a href="/">Home page</a>
    <a href="/products">Productos</a>
  </div>
</div>
<hr />
<br />

<div class="cart-list">
  <h3>Productos: </h3>

  {{#each cart.products}}
    <ul class="cart-item">
      <p>
        <strong>Título:</strong>
        {{productId.title}}
      </p>
      <p class="price"><strong>Precio:</strong> ${{productId.price}}</p>
      <p><strong>Cantidad:</strong> {{quantity}}</p>
      <button data-id="{{productId._id}}" class="delete-btn">Borrar</button>
      <hr />
    </ul>
  {{/each}}

  <br />
  <p><strong>Precio Total: </strong>${{cart.totalPrice}}</p>

  {{#unless isEmpty}}
    <form id="purchase-form" action="/cart/{{cart._id}}/purchase" method="post">
      <input type="hidden" name="cartId" value="{{cart._id}}" />
      <button type="submit">Finalizar compra</button>
    </form>
  {{else}}
    <p>El carrito está vacío</p>
  {{/unless}}
</div>

<script src="/js/cart.js"></script>